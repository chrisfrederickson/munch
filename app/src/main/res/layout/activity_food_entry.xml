<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.felkertech.n.munch.Activities.FoodEntry">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:paddingTop="24dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="64dp"
            android:scaleType="fitCenter"
            android:id="@+id/photo_taken"
            android:src="@drawable/ic_launcher"/>
        <AutoCompleteTextView
            android:layout_marginTop="8dp"
            android:layout_width="320dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:id="@+id/food_type"
            android:hint="Food Name"
            android:layout_height="wrap_content"
            android:editable="true"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/food_amount"
                android:hint="Amount"
                android:inputType="number"
                android:singleLine="true" />
            <Spinner
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:id="@+id/food_units"
                android:entries="@array/units"
                android:prompt="@string/pick_units">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:id="@+id/image_edit"
                android:src="@drawable/ic_edit_black_36dp"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:id="@+id/image_share"
                android:src="@drawable/ic_share_black_36dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_check_white_18dp"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="@color/accent_dark"
        fab:fab_colorRipple="@color/ripple" />

</FrameLayout>
